import numpy as np
import matplotlib.pyplot as plt

N = 50
A = np.zeros((N, N))
for i in range(N):
    for j in range(N):
        if j == i:
            A[i, i]=0
        if j == i + 1:
            A[i, i+1] = 1
        if j == i-1:
            A[i, i-1] = -1
plt.spy(A, markersize=5 , c='purple')
plt.show()
